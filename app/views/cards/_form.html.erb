<%= form_with model: @card, local: true do |form| %>

<% if @card.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@card.errors.count, "ошибка") %> мешают сохранить эту карточку
      </h2>
      <ul>
        <% @card.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

  <p>
    <%= form.label :Слово %><br>
    <%= form.text_field :original_text %>
  </p>
 
  <p>
    <%= form.label :Перевод %><br>
    <%= form.text_field :translated_text %>
  </p>

  <p>
    <%= form.label :"Дата пересмотра"%><br>
    <%= form.date_select :review_date %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
<% end %>